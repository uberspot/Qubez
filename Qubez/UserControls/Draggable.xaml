<UserControl x:Class="Qubez.UserControls.Draggable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="65" d:DesignWidth="65">

    <Border Name="border" CornerRadius="4" BorderBrush="#fed6fd" BorderThickness="2" Width="65" Height="65">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#291303" Offset="1"/>
                <GradientStop Color="#d8a4fc" Offset="0"/>
            </LinearGradientBrush>
        </Border.Background>
        <TextBlock Name="tblLetter" Text="{Binding Letter}" TextAlignment="Center" FontSize="50" Foreground="LightCyan" Margin="0,-5,0,0" />
    </Border>
</UserControl>
