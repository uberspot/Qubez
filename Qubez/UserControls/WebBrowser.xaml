<UserControl xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"  x:Class="Qubez.UserControls.WebBrowser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Width="480" Height="800">
        <phone:WebBrowser Name="browser" Height="800" VerticalAlignment="Top" />
        <Border Style="{StaticResource BorderStyle}" Width="430" Height="75" VerticalAlignment="Bottom" Margin="0,0,0,110">
            <Button Name="btnClose" Content="Close" BorderThickness="0" Click="btnClose_Click" />
        </Border>
    </Grid>
</UserControl>
